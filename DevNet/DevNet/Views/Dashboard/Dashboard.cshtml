<div class="container-fluid">
    <div class="row">

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Dashboard</h1>

            <div class="row placeholders">
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img data-src="holder.js/200x200/auto/sky" class="img-responsive" alt="Generic placeholder thumbnail">
                    <h4>Figure 1</h4>
                    <span class="text-muted">Software Specialization Distribution</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img data-src="holder.js/200x200/auto/vine" class="img-responsive" alt="Generic placeholder thumbnail">
                    <h4>Figure 2</h4>
                    <span class="text-muted">Correlation Between IDE use and Programming Language</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img data-src="holder.js/200x200/auto/sky" class="img-responsive" alt="Generic placeholder thumbnail">
                    <h4>Figure 3</h4>
                    <span class="text-muted">Language Popularity by Age Group</span>
                </div>
                <div class="col-xs-6 col-sm-3 placeholder">
                    <img data-src="holder.js/200x200/auto/vine" class="img-responsive" alt="Generic placeholder thumbnail">
                    <h4>Figure 4</h4>
                    <span class="text-muted">Software Specialization by Location</span>
                </div>
            </div>

            @{

                if (Model.HistoricData != null)
                {
                    <div class="row float">

                        <h2>Historic Data</h2>

                        <ul>
                            @for (int index = 0; index < numRecords; index++ )
                            {
                                <li>@Model.HistoricData["Results"]["Dev Net Historic Data"]["value"]["Values"][index][1].ToString()</li>
                            }
                        </ul>


                    </div>
                }
            }

